<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Backend</title>
</head>

<body class="bg-zinc-900 text-white min-h-screen flex items-center justify-center px-4">

    <div class="w-full max-w-2xl space-y-10">

        <!-- Form Section -->
        <form method="post" action="/create" class="bg-zinc-800 p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold mb-4">Submit a Message</h2>
            <div class="space-y-4">
                <input type="text" name="title" placeholder="Enter title"
                    class="w-full p-3 bg-zinc-700 text-white rounded outline-none focus:ring-2 focus:ring-blue-500" />
                <textarea name="description" placeholder="Enter description" rows="4"
                    class="w-full resize-none p-3 bg-zinc-700 text-white rounded outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200">
                    Submit
                </button>
            </div>
        </form>

        <!-- Cards Section -->
        <div class="grid gap-4 overflow-y-scroll max-h-96">
            <% if (files.length> 0) { %>
                <% files.forEach(file=> { %>
                    <div class="bg-zinc-800 p-6 rounded-lg shadow-md hover:bg-zinc-700 transition duration-200">
                        <h1 class="text-xl font-semibold mb-2">
                            <%= file %>
                        </h1>
                        <p class="text-gray-300">Read more</p>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="text-center text-gray-400">No files available.</p>
                            <% } %>
        </div>

    </div>

</body>

</html>